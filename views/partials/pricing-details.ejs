<% for (let plan of plans) { %>
    <div class="background rounded-xl w-full p-4 border border-a !bg-white !text-dark !border-[#E4E4E4] flex flex-col gap-8 items-center basis-full lg:basis-1/3 max-w-xs">
        <div class="flex flex-col gap-2 items-center bg-primary w-full text-white rounded-xl py-4">
            <div class="font-medium text-xl"><%= plan.name %></div>
            <div class="font-medium text-xl"><%= plan.price %></div>
        </div>
        <div class="flex flex-col text-sm w-full">
            <% for (let detail of plan.details) { %>
                <div class="flex justify-between mt-4">
                    <div class="font-medium text-xs"><%= detail.label %></div>
                    <div class="font-medium text-xs"><%= detail.value %></div>
                </div>
                <hr class="my-4 !opacity-100">
            <% } %>
        </div>
        <div class="flex justify-center mt-4">
            <button class="bg-primary text-white px-4 py-2 rounded-full hover:bg-blue-900 duration-700"><a href="https://wa.me/6285745267740" target="_blank" rel="noopener noreferrer">Choose Plan</a></button>
        </div>
    </div>
<% } %>
