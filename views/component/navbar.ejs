<div class="w-full flex justify-between items-center p-4 md:px-8 select-none z-40">
    <div class="flex cursor-pointer justify-between items-center gap-4" id="menuSidebar">
        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" aria-hidden="true" role="img" class="md:hidden" width="24" height="24" viewBox="0 0 24 24">
            <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
        </svg>
        <div class="text-2xl md:text-3xl font-semibold"><%= TitlePage %></div>
    </div>
    <div class="flex items-center gap-4 cursor-pointer">
        <div class="relative">
            <div class="flex gap-4 items-center">
                <div class="text-right hidden md:block">
                    <div class="text-sm"><%= nick %></div>
                    <div class="text-xs"><%= email %></div>
                </div>
                <img class="h-8 rounded-full" alt="Photo Profile" src="<%= ImageProfile %>" id="submenu">
            </div>
            <div class="z-50 transition-[opacity] bg-white duration-300 opacity-0" id="buttonSub">
                <ul class="absolute right-0 w-56 p-2 mt-2 space-y-2 rounded-xl z-50 background border border-a" aria-label="submenu">
                    <div class="cursor-pointer">
                        <li class="flex">
                            <div class="inline-flex items-center w-full px-3 py-2 text-sm rounded-xl hover:bg-gray-200">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mr-3 fill-current" viewBox="0 0 24 24">
                                    <path d="M12,12A6,6,0,1,0,6,6,6.006,6.006,0,0,0,12,12ZM12,2A4,4,0,1,1,8,6,4,4,0,0,1,12,2Z"></path>
                                    <path d="M12,14a9.01,9.01,0,0,0-9,9,1,1,0,0,0,2,0,7,7,0,0,1,14,0,1,1,0,0,0,2,0A9.01,9.01,0,0,0,12,14Z"></path>
                                </svg>
                                <a class="font-semibold" href="/auth/profile">Profile</a>
                            </div>
                        </li>
                        <li class="flex">
                            <a href="/logout"class="inline-flex items-center w-full px-3 py-2 text-sm rounded-xl hover:bg-gray-200">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 a3 0 013 3v1"></path>
                                </svg>
                                <span class="font-semibold" href="/logout">Log out</span>
                            </a>
                        </li>
                    </div>
                </ul>
            </div>
        </div>
    </div>
</div>
